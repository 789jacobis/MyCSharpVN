    private List<DialogueLine> script = new() {
        new() { CharacterName = "ç³»çµ±", Text = "æ­£åœ¨è¼‰å…¥è§’è‰²æ¸²æŸ“æ ¸å¿ƒ 7.0...", CharacterSprite = "" },
